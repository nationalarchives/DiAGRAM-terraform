{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "Environment": {
      "Type": "AWS::SSM::Parameter::Value<String>"
    }
  },
  "Resources": {
    "DiagramAccessRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "DiagramAccessRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Federated": {
                  "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:oidc-provider/token.actions.githubusercontent.com"
                }
              },
              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringEquals": {
                  "token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
                  "token.actions.githubusercontent.com:sub": {"Fn::Sub" : "repo:nationalarchives/DiAGRAM:environment:${Environment}"}
                }
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DiagramInlinePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "route53:*",
                    "acm:*",
                    "cloudfront:*",
                    "apigateway:*",
                    "logs:*",
                    "lambda:*",
                    "wafv2:*"
                  ],
                  "Resource": "*"
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": [
                    "arn:aws:s3:::nata-dia3-dev-site",
                    "arn:aws:s3:::nata-dia3-dev-site/*",
                    "arn:aws:s3:::mgmt-diagram-terraform-state",
                    "arn:aws:s3:::mgmt-diagram-terraform-state/*"
                  ]
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "iam:GetPolicy",
                    "iam:GetPolicyVersion",
                    "iam:GetRole",
                    "iam:GetRolePolicy",
                    "iam:ListRolePolicies",
                    "iam:ListAttachedRolePolicies",
                    "iam:TagRole",
                    "iam:UntagRole",
                    "iam:UpdateRoleDescription"
                  ],
                  "Resource": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/lambda-iam"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/api_gateway_cloudwatch_global"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/Role_Diagram_GitHub_OICD"
                    }
                  ]
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "ssm:GetParameter"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:ssm:eu-west-2:${AWS::AccountId}:parameter/mgmt/account_id"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  }
}
