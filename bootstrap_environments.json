{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "Environment": {
      "Type": "AWS::SSM::Parameter::Value<String>"
    },
    "ManagementAccount": {
      "Type": "AWS::SSM::Parameter::Value<String>"
    }
  },
  "Resources": {
    "DiagramPushToECRRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "DiagramPushToECRRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Federated": {
                  "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:oidc-provider/token.actions.githubusercontent.com"
                }
              },
              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringLike": {
                  "token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
                  "token.actions.githubusercontent.com:sub": [
                    "repo:nationalarchives/DiAGRAM:environment:dev",
                    "repo:nationalarchives/DiAGRAM:environment:live"
                  ]
                }
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DiagramPushToECRPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "ecr:InitiateLayerUpload",
                    "ecr:UploadLayerPart",
                    "ecr:CompleteLayerUpload",
                    "ecr:BatchCheckLayerAvailability",
                    "ecr:PutImage",
                    "ecr:BatchGetImage",
                    "ecr:GetDownloadUrlForLayer"
                  ],
                  "Resource": {"Fn::Sub":  "arn:aws:ecr:eu-west-2:${ManagementAccount}:repository/diagram-backend-lambda-runtimes"}
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": "ecr:GetAuthorizationToken",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "DiagramTerraformRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "DiagramTerraformRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Federated": {
                  "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:oidc-provider/token.actions.githubusercontent.com"
                }
              },
              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringLike": {
                  "token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
                  "token.actions.githubusercontent.com:sub": [
                    "repo:nationalarchives/DiAGRAM-terraform:ref:refs/heads/*",
                    {"Fn::Sub" : "repo:nationalarchives/DiAGRAM:environment:${Environment}"},
                    {"Fn::Sub" : "repo:nationalarchives/DiAGRAM-terraform:environment:${Environment}"}
                  ]
                }
              }
            },
            {
              "Effect": "Allow",
              "Principal": {
                "AWS": {"Fn::Sub":  "arn:aws:iam::${AWS::AccountId}:root"}
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DiagramTerraformPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "route53:*",
                    "acm:*",
                    "ecr:*",
                    "cloudfront:*",
                    "cloudwatch:*",
                    "events:*",
                    "apigateway:*",
                    "logs:*",
                    "lambda:*",
                    "shield:*",
                    "wafv2:*"
                  ],
                  "Resource": "*"
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": [
                    {"Fn::Sub": "arn:aws:s3:::nata-dia3-${Environment}-site"},
                    {"Fn::Sub": "arn:aws:s3:::nata-dia3-${Environment}-site/*"},
                    {"Fn::Sub": "arn:aws:s3:::${Environment}-diagram-shield-response"},
                    {"Fn::Sub": "arn:aws:s3:::${Environment}-diagram-shield-response/*"},
                    "arn:aws:s3:::mgmt-diagram-terraform-state",
                    "arn:aws:s3:::mgmt-diagram-terraform-state/*"
                  ]
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "iam:AttachRolePolicy",
                    "iam:CreatePolicy",
                    "iam:CreateRole",
                    "iam:DeletePolicy",
                    "iam:DeleteRole",
                    "iam:DetachRolePolicy",
                    "iam:DeleteRolePolicy",
                    "iam:GetPolicy",
                    "iam:GetPolicyVersion",
                    "iam:GetRole",
                    "iam:GetRolePolicy",
                    "iam:ListPolicyVersions",
                    "iam:ListRolePolicies",
                    "iam:ListAttachedRolePolicies",
                    "iam:ListInstanceProfilesForRole",
                    "iam:PassRole",
                    "iam:PutRolePolicy",
                    "iam:TagPolicy",
                    "iam:TagRole",
                    "iam:UntagRole",
                    "iam:UpdateRoleDescription",
                    "iam:UpdateAssumeRolePolicy"
                  ],
                  "Resource": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/lambda-iam"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/api_gateway_cloudwatch_global"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/Role_Diagram_GitHub_OICD"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-shield-team-response-role"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/${Environment}-dr2-eventbridge-alarm-state-change-alarm-only-role"
                    },
                    {
                      "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/${Environment}-dr2-eventbridge-alarm-state-change-alarm-only-policy"
                    }
                  ]
                },
                {
                  "Sid": "",
                  "Effect": "Allow",
                  "Action": [
                    "ssm:GetParameter",
                    "secretsmanager:CreateSecret",
                    "secretsmanager:UpdateSecret",
                    "secretsmanager:DescribeSecret",
                    "secretsmanager:DeleteSecret",
                    "secretsmanager:GetSecretValue",
                    "secretsmanager:PutSecretValue"

                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:aws:ssm:eu-west-2:${AWS::AccountId}:parameter/mgmt/account_id"
                    },
                    {
                      "Fn::Sub": "arn:aws:ssm:eu-west-2:${AWS::AccountId}:parameter/mgmt/slack/token"
                    },
                    {
                      "Fn::Sub": "arn:aws:secretsmanager:eu-west-2:${AWS::AccountId}:secret:events!connection/*"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  }
}
